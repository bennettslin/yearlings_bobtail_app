    <!-- Begin Bennett's custom key bindings -->

    <item>
      <name>Change right four keys to left, down, up, right</name>
      <identifier>private.change_right_four_keys_to_ldur</identifier>
      <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::CURSOR_LEFT</autogen>
      <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::CURSOR_DOWN</autogen>
      <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::CURSOR_UP</autogen>
      <autogen>__KeyToKey__ KeyCode::CURSOR_LEFT, KeyCode::CURSOR_RIGHT</autogen>
    </item>

    <item>
      <name>Change right four keys to down, up, left, right</name>
      <identifier>private.change_right_four_keys_to_dulr</identifier>
      <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::CURSOR_DOWN</autogen>
      <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::CURSOR_UP</autogen>
      <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::CURSOR_LEFT</autogen>
      <autogen>__KeyToKey__ KeyCode::CURSOR_LEFT, KeyCode::CURSOR_RIGHT</autogen>
    </item>

    <item>
      <name>Change PC Application to F2</name>
      <identifier>private.change_pc_application_to_f2</identifier>
      <autogen>__KeyToKey__ KeyCode::PC_APPLICATION, KeyCode::F2</autogen>
    </item>

    <item>
      <name>Change right control to Command-Space</name>
      <identifier>private.change_right_control_to_command_space</identifier>
      <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::SPACE, ModifierFlag::COMMAND_R</autogen>
    </item>

